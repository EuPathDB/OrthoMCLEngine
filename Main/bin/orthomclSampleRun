#!/bin/sh

BIN=$( readlink -f -- "$( dirname -- "$0" )" )

ORTHO_DIST=$( dirname $( readlink -f -- "${0%/*}" ))
PATH=$ORTHO_DIST/bin:$PATH
PATH=$HOME/mcl/bin:$PATH
PATH=$HOME/blast-2.2.21/bin:$PATH
export PATH

WORK_DIR=$HOME/my_orthomcl_dir

this=$(basename $0)

mkdir $WORK_DIR

cd $WORK_DIR

echo "copying orthomcl.config"
cp $ORTHO_DIST/doc/OrthoMCLEngine/Main/orthomcl.config.template $WORK_DIR/samplerun.orthomcl.config 
[[ "$?" -eq "0" ]] || { echo "$this FAILED"; exit 1; }

echo
echo "copying sample data to compliantFasta/"
cp -r $ORTHO_DIST/doc/OrthoMCLEngine/Main/sample_data $WORK_DIR/compliantFasta
[[ "$?" -eq "0" ]] || { echo "$this FAILED"; exit 1; }

echo
echo "running orthomclInstallSchema"
echo y | orthomclInstallSchema $WORK_DIR/samplerun.orthomcl.config  --reset
[[ "$?" -eq "0" ]] || { echo "$this FAILED"; exit 1; }

echo
echo "running orthomclPairs to reset the builtin database"
orthomclPairs $WORK_DIR/samplerun.orthomcl.config log_file cleanup=all

cd $WORK_DIR

echo
echo "running orthomclFilterFasta"
orthomclFilterFasta $WORK_DIR/compliantFasta 10 20
[[ "$?" -eq "0" ]] || { echo "$this FAILED"; exit 1; }

echo
if [[ $(which formatdb 2>/dev/null) ]]; then
  echo "running formatdb"
  formatdb -p -i $WORK_DIR/goodProteins.fasta
elif [[ $(which makeblastdb 2>/dev/null) ]]; then
  echo "running makeblastdb"
  makeblastdb -dbtype prot -in $WORK_DIR/goodProteins.fasta
else
  echo "formatdb or makeblastdb not found"
  exit 1
fi
[[ "$?" -eq "0" ]] || { echo "$this FAILED"; exit 1; }

cd $WORK_DIR

echo
echo "running blastall"
if [[ $(which  blastall 2>/dev/null) ]]; then
  blastall -p blastp \
      -i $WORK_DIR/goodProteins.fasta \
      -d $WORK_DIR/goodProteins.fasta \
      -o $WORK_DIR/all_vs_all.out \
      -e 1 -m8 -a 2 -v 1000 -b 1000
elif [[ $(which legacy_blast.pl 2>/dev/null) ]]; then
  blastpath="$(dirname "$(which legacy_blast.pl)")"
  legacy_blast.pl blastall -p blastp \
    -i $WORK_DIR/goodProteins.fasta \
    -d $WORK_DIR/goodProteins.fasta \
    -o $WORK_DIR/all_vs_all.out \
    -e 1 -m8 -a 2 -v 1000 -b 1000 \
    --path $blastpath
else
  echo "blastall not found"
  exit 1
fi
[[ "$?" -eq "0" ]] || { echo "$this FAILED"; exit 1; }

echo
echo "running orthomclBlastParser"
orthomclBlastParser all_vs_all.out $WORK_DIR/compliantFasta/ > $WORK_DIR/similarSequences.txt
[[ "$?" -eq "0" ]] || { echo "$this FAILED"; exit 1; }

echo
echo "running orthomclLoadBlast"
orthomclLoadBlast $WORK_DIR/samplerun.orthomcl.config $WORK_DIR/similarSequences.txt 
[[ "$?" -eq "0" ]] || { echo "$this FAILED"; exit 1; }

echo
echo "running orthomclPairs"
orthomclPairs $WORK_DIR/samplerun.orthomcl.config log_file cleanup=no
[[ "$?" -eq "0" ]] || { echo "$this FAILED"; exit 1; }

echo
echo "running orthomclDumpPairsFiles"
orthomclDumpPairsFiles $WORK_DIR/samplerun.orthomcl.config
[[ "$?" -eq "0" ]] || { echo "$this FAILED"; exit 1; }


echo
echo "running mcl"
mcl $WORK_DIR/mclInput  --abc -I 1.5 -o $WORK_DIR/mclOutput
[[ "$?" -eq "0" ]] || { echo "$this FAILED"; exit 1; }


echo
echo "running orthomclMclToGroups"
orthomclMclToGroups MSH_ 1 $WORK_DIR/mclOutput
[[ "$?" -eq "0" ]] || { echo "$this FAILED"; exit 1; }

echo
echo "done"
